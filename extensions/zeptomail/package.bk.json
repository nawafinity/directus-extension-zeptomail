{
	"name": "zeptomail",
	"description": "Please enter a description for your extension",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "module",
				"name": "module-zeptomail-settings",
				"source": "src/module-zeptomail-settings/index.ts"
			},
			{
				"type": "hook",
				"name": "hook-zeptomail",
				"source": "src/hook-zeptomail/index.ts"
			}
		],
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "CHOKIDAR_USEPOLLING=true directus-extension build --watch --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"add": "directus-extension add"
	},
	"devDependencies": {
		"@directus/composables": "^11.1.9",
		"@directus/extensions-sdk": "13.0.4",
		"@directus/types": "^13.1.0",
		"@directus/utils": "^13.0.3",
		"sass": "^1.86.1",
		"typescript": "^5.8.2",
		"vue": "^3.5.13",
		"vue-i18n": "^11.1.2",
		"vue-router": "^4.5.0",
		"@types/node": "^22.13.17"
	}
}
